#!/bin/bash

set -euo pipefail

WAREHOUSE=$HOME/.local/share/implant
BIN_DIR=$HOME/.local/bin
[[ -d $WAREHOUSE ]] || mkdir -p $WAREHOUSE

error(){
    echo "$@" >&2
    exit 1
}

make_link(){
    local name=$1
    local path=$2
    echo "$name=$path"
}

get_link(){
    local link=$(grep "^$(sed 's/\./\\./g' <<<$1)" <$WAREHOUSE/index)
    if [[ -z "$link" ]]
    then
        error "Package $1 is not in index."
    fi
    echo $link
}

remove_link(){
    sed "/^$name=/d" -i $WAREHOUSE/index
}

get_path(){
    cut -d"=" -f2- <<<$(get_link $1)
}

is_github_path(){
    grep -v "[:@]" <<<${1:-} | grep -q "^[^/]*/[^/]*$"
}

pull(){
    local path=$1
    if is_github_path $path
    then
        local name=$(basename $path)
        if [[ -e $WAREHOUSE/$name ]]
        then
            local name=$(sed "s#/#_#g" <<<$path)
        fi
        git clone https://github.com/$path $WAREHOUSE/$name &&
            echo $WAREHOUSE/$name
    else
        local name=$(basename $path)
        if [[ -e $WAREHOUSE/$name ]]
        then
            local name=$(sed "s#/#_#g" <<<$path)
        fi
        git clone $path $WAREHOUSE/$name &&
            echo $WAREHOUSE/$name
    fi
}

clean_links(){
    local path=$1
    local pkg=$path/package.json
    if [[ ! -e $pkg ]]
    then
        error "There is no such file $pkg"
    fi
    local i=0
    local script=$(jq .scripts <$pkg | jq -r .[$i])
    while [[ "$script" != "null" ]]
    do
        local bin_name=$(basename "$script")
        rm $BIN_DIR/$bin_name
        local i=$((i+1))
        local script=$(jq .scripts <$pkg | jq -r .[$i])
    done
}

link_scripts(){
    local path=$1
    local pkg=$path/package.json
    local i=0
    local script=$(jq .scripts <$pkg | jq -r .[$i])
    while [[ "$script" != "null" ]]
    do
        local bin_name=$(basename "$script")
        ln -s $path/$script $BIN_DIR/$bin_name
        local i=$((i+1))
        local script=$(jq .scripts <$pkg | jq -r .[$i])
    done
}

install_pkg(){
    local path=$1
    local pkg=$path/package.json
    if [[ ! -e "$pkg" ]]
    then
        error "There is no package.json in $path."
    fi
    local name=$(jq -r .name <$pkg)

    link_scripts $path || true

    echo $(make_link $name $path) >> $WAREHOUSE/index
    echo "Package installed as $name"
}

install(){
    if [[ -z "${1:-}" ]]
    then
        help
        return 1
    fi
    local path=$(pull $1)
    [[ -n "$path" ]] ||
        error "Unable to clone repository."
    install_pkg $path
}

update(){
    local name=$1
    local path=$(get_path $1)
    [[ -e "$path" ]] ||
        error "The package $name is not installed."

    clean_links "$path"
    cd $path || error "$path does not exist."
    git pull || error "Cannot pull modifications."
    link_scripts $path || error "Error while link scripts."
}

dir(){
    local name=${1:-}
    if [[ -z "$name" ]]
    then
        local path=$WAREHOUSE
    else
        local path=$(get_path $1)
        if [[ ! -e "$path" ]]
        then
            error "The package $name is not installed in $path."
        fi
    fi

    echo $path
}


remove(){
    local name=$1
    local path=$(get_path $1)
    [[ -e "$path" ]] ||
        error "The package $name is not installed."

    local pkg=$path/package.json
    echo "Package $name at $path will be removed."
    echo "Continue ? [y/N]"
    local rep
    read rep
    [[ "$rep" =~ '[Yy]\(es\)*' ]] ||
        error "Aborted."

    local i=0
    local script=$(jq .scripts <$pkg | jq -r .[$i])
    while [[ "$script" != "null" ]]
    do
        local bin_name=$(basename "$script")
        rm $BIN_DIR/$bin_name
        local i=$((i+1))
        local script=$(jq .scripts <$pkg | jq -r .[$i])
    done
    rm -rf $WAREHOUSE/$name
    remove_link $name
}

help(){
    case ${1:-} in
        get)
            echo "Usage:"
            echo " get REPO"
            ;;
        update)
            echo "Usage:"
            echo " update NAME"
            ;;
        remove)
            echo "Usage:"
            echo " remove NAME"
            ;;
        help)
            echo "Usage:"
            echo " help CMD"
            ;;
        list)
            echo "Usage:"
            echo " list"
            ;;
        dir)
            echo "Usage:"
            echo " dir NAME"
            ;;
        *)
            echo "Commands:"
            echo " get"
            echo " update"
            echo " remove"
            echo " dir"
            echo " list"
            echo " help"
            ;;
    esac
}

cmd=${1:-}
shift || true

case $cmd in
    get)
        if [[ -z "${1:-}" ]]
        then
            help get
            exit 1
        fi
        install "$@"
        ;;
    update)
        if [[ -z "${1:-}" ]]
        then
            help update
            exit 1
        fi
        update "$@"
        ;;
    remove)
        if [[ -z "${1:-}" ]]
        then
            help remove
            exit 1
        fi
        remove "$@"
        ;;
    dir)
        dir "$@"
        ;;
    list)
        sed 's#\(.*\)=\(.*\)#\2 -> \1#' <$WAREHOUSE/index
        ;;
    *)
        help "$@"
        ;;
esac
